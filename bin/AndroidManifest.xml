<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.todo"
    android:versionCode="1"
    android:versionName="1.0" >
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.todo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.todo.AddOrEditForm"
            android:label="@string/title_activity_add_or_edit_form"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.example.todo.AddIntruction"
            android:label="@string/title_activity_add_intruction" >
        </activity>
        <activity
            android:name="com.example.todo.MenuList"
            android:label="@string/title_activity_menu_list" >
        </activity>
    </application>

</manifest>
